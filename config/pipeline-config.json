{
  "pipeline": {
    "name": "webapp-demo-intelligent-pipeline",
    "version": "3.1",
    "description": "Intelligent CI/CD Pipeline for WebApp Demo - NX Monorepo with React frontend and Express.js backend",
    "created": "2025-08-03T14:30:25Z",
    "budget_tier": "free",
    "deployment_platform": "aws_serverless"
  },
  "project": {
    "type": "nx_monorepo",
    "framework": {
      "frontend": "react",
      "backend": "express",
      "testing": ["jest", "cypress"],
      "styling": "styled-components",
      "orm": "typeorm"
    },
    "package_manager": "yarn",
    "yarn_version": "3.2.1",
    "node_version": "16",
    "typescript": true,
    "monorepo_tool": "nx",
    "nx_version": "14.3.6"
  },
  "features": {
    "enabled": [
      "security_scanning",
      "performance_testing",
      "quality_gates",
      "advanced_notifications",
      "database_deployment_automation"
    ],
    "security_scanning": {
      "sast": true,
      "dast": false,
      "dependency_check": true,
      "license_compliance": true,
      "sbom_generation": true
    },
    "performance_testing": {
      "bundle_analysis": true,
      "lighthouse_audit": true,
      "load_testing": false,
      "memory_profiling": false
    },
    "quality_gates": {
      "code_coverage": true,
      "build_size_limits": true,
      "lint_enforcement": true,
      "type_checking": true,
      "complexity_analysis": true
    },
    "advanced_notifications": {
      "slack": false,
      "teams": false,
      "email": true,
      "github_status": true,
      "deployment_summaries": true
    },
    "database_deployment_automation": {
      "migrations": true,
      "schema_validation": true,
      "backup_verification": true,
      "connection_testing": true
    }
  },
  "infrastructure": {
    "cloud_provider": "aws",
    "region": "us-east-1",
    "architecture": "serverless",
    "services": {
      "compute": {
        "type": "lambda",
        "runtime": "nodejs16.x",
        "memory": 512,
        "timeout": 30,
        "reserved_concurrency": 10
      },
      "storage": {
        "type": "s3",
        "static_hosting": true,
        "cdn": {
          "enabled": false,
          "provider": "cloudfront",
          "price_class": "PriceClass_100"
        }
      },
      "database": {
        "type": "rds_aurora_serverless_v2",
        "engine": "postgresql",
        "version": "13.7",
        "scaling": {
          "min_capacity": 0.5,
          "max_capacity": 16
        },
        "backup_retention": 7,
        "encryption": true
      },
      "api_gateway": {
        "type": "http_api",
        "cors_enabled": true,
        "throttling": {
          "burst_limit": 100,
          "rate_limit": 50
        }
      },
      "monitoring": {
        "cloudwatch_logs": true,
        "cloudwatch_metrics": true,
        "x_ray_tracing": false,
        "detailed_monitoring": false
      }
    }
  },
  "cost_optimization": {
    "budget_limit": 5,
    "currency": "USD",
    "billing_period": "monthly",
    "strategies": [
      "serverless_auto_scaling",
      "free_tier_maximization",
      "resource_cleanup",
      "log_retention_limits",
      "cdn_caching_optimization"
    ],
    "estimated_monthly_cost": {
      "lambda": 0,
      "s3": 1,
      "api_gateway": 0,
      "rds_serverless": 3,
      "cloudwatch": 0.5,
      "data_transfer": 0.5,
      "total": 5
    }
  },
  "environments": {
    "staging": {
      "auto_deploy": true,
      "branches": ["main", "develop"],
      "approval_required": false,
      "database_scaling": {
        "min_capacity": 0.5,
        "max_capacity": 4
      },
      "monitoring": {
        "detailed": false,
        "x_ray": false
      }
    },
    "production": {
      "auto_deploy": false,
      "branches": ["main"],
      "approval_required": true,
      "database_scaling": {
        "min_capacity": 1,
        "max_capacity": 16
      },
      "monitoring": {
        "detailed": true,
        "x_ray": true
      }
    }
  },
  "deployment": {
    "strategy": "blue_green",
    "rollback": {
      "enabled": true,
      "automatic_on_failure": true,
      "health_check_timeout": 300
    },
    "pre_deployment_checks": [
      "security_scan",
      "quality_gates",
      "dependency_audit",
      "performance_baseline"
    ],
    "post_deployment_tasks": [
      "health_checks",
      "smoke_tests",
      "performance_validation",
      "notification_dispatch"
    ]
  },
  "security": {
    "secrets_management": {
      "provider": "github_secrets",
      "rotation_enabled": false,
      "encryption": true
    },
    "compliance": {
      "standards": ["OWASP", "CIS"],
      "vulnerability_scanning": true,
      "license_checking": true,
      "sbom_required": true
    },
    "access_control": {
      "iam_least_privilege": true,
      "vpc_isolation": true,
      "encryption_at_rest": true,
      "encryption_in_transit": true
    }
  },
  "monitoring": {
    "metrics": {
      "application_metrics": true,
      "infrastructure_metrics": true,
      "business_metrics": false,
      "custom_metrics": false
    },
    "alerting": {
      "error_rate_threshold": 5,
      "latency_threshold": 5000,
      "availability_threshold": 99.5,
      "cpu_threshold": 80,
      "memory_threshold": 80
    },
    "logging": {
      "level": "info",
      "retention_days": 14,
      "structured_logging": true,
      "centralized": true
    },
    "dashboards": {
      "application_dashboard": true,
      "infrastructure_dashboard": true,
      "cost_dashboard": true,
      "security_dashboard": false
    }
  },
  "testing": {
    "unit_tests": {
      "framework": "jest",
      "coverage_threshold": 80,
      "parallel_execution": true
    },
    "integration_tests": {
      "database_required": true,
      "external_services": false,
      "test_data_management": true
    },
    "e2e_tests": {
      "framework": "cypress",
      "headless": true,
      "browser_matrix": false,
      "visual_regression": false
    },
    "performance_tests": {
      "load_testing": false,
      "stress_testing": false,
      "bundle_size_monitoring": true,
      "lighthouse_auditing": true
    }
  },
  "documentation": {
    "auto_generation": true,
    "api_documentation": false,
    "deployment_guides": true,
    "troubleshooting_guides": true,
    "cost_analysis": true
  },
  "git_integration": {
    "branch_strategy": "feature_branch",
    "required_reviews": 1,
    "protected_branches": ["main", "production"],
    "auto_merge": false,
    "commit_message_validation": false
  }
}
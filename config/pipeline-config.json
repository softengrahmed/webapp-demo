  "deployment": {
    "platform": "aws-serverless",
    "services": {
      "frontend": {
        "type": "s3-static-website",
        "staging": {
          "bucketPattern": "webapp-demo-staging-{buildId}"
        },
        "production": {
          "bucket": "webapp-demo-production"
        }
      },
      "api": {
        "type": "lambda-function",
        "runtime": "nodejs16.x",
        "memory": 512,
        "timeout": 30,
        "staging": {
          "functionName": "webapp-demo-api-staging"
        },
        "production": {
          "functionName": "webapp-demo-api-production"
        }
      }
    },
    "regions": {
      "primary": "us-east-1"
    }
  },
  "monitoring": {
    "cloudwatch": {
      "enabled": true,
      "alarms": [
        {
          "name": "lambda-errors",
          "metric": "Errors",
          "threshold": 5
        },
        {
          "name": "lambda-throttles",
          "metric": "Throttles",
          "threshold": 10
        }
      ],
      "dashboards": [
        "webapp-demo-dashboard"
      ]
    },
    "budgets": {
      "monthly": 5,
      "alertThreshold": 80
    }
  },
  "retention": {
    "artifacts": 7,
    "logs": 7,
    "stagingEnvironments": 7
  },
  "requiredSecrets": [
    "AWS_ACCESS_KEY_ID",
    "AWS_SECRET_ACCESS_KEY",
    "AWS_ACCOUNT_ID",
    "EMAIL_USERNAME",
    "EMAIL_PASSWORD"
